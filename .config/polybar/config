[colors]
;background = ${xrdb:color0:#222}
background = #282828
background-alt = #282828
;foreground = ${xrdb:color7:#222}
foreground = #ebdbb2
foreground-alt = #ebdbb2
primary = #b8bb26
secondary = #cc241d
alert = #cc241d

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 97.9%
height = 27
offset-x = 0.8%
offset-y = 0.8%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

